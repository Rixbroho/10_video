<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav m-10 text-blue-500">
            <a href="/">Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1> 
        <div class="users flex flex-wrap gap-3">
            <% if(user.length > 0){ %>
                <% user.forEach((user)=>{ %>
                    <div class="user max-w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-500 overflow-hidden">
                            <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.username %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex justify-between mt-6">
                            <a class="text-zinc-600" href="">Edit User</a>
                            <a class="text-red-500" href="/delete/<%= user._id%>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            <% }else{ %>
                <h1 class="text-zinc-500 center mx-6">No user yet</h1>
            <% } %>

        </div>
    </div>
</body>
</html>